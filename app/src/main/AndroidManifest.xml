<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hcmute.nhom1.chatapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChatApp">
        <activity
            android:name=".UI.EnterOTPActivity"
            android:exported="false" />
        <activity
            android:name=".UI.PhoneActivity"
            android:exported="false" />
        <activity
            android:name=".UI.SendAgainActivity"
            android:exported="false" />
        <activity
            android:name=".UI.InfoVideoActivity"
            android:exported="false" />
        <activity
            android:name=".UI.InfoImageActivity"
            android:exported="false" />
        <activity
            android:name=".UI.FileActivity"
            android:exported="false" />
        <activity
            android:name=".UI.InformationUserActivity"
            android:exported="false" />
        <activity
            android:name=".UI.MessageActivity"
            android:exported="false" />
        <activity
            android:name=".UI.MainChatAppActivity"
            android:exported="false" />
        <activity
            android:name=".UI.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".UI.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".UI.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".Notifications.MyFirebaseIdService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>